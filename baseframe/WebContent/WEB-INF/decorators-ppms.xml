<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
    <excludes>
        <pattern>/css/*</pattern>
        <pattern>/easyui/*</pattern>
        <pattern>/images/*</pattern>
        <pattern>/js/*</pattern>
        <pattern>/kindeditor/*</pattern>

        <pattern>/upload/*</pattern>

        <pattern>/login.jsp</pattern>
        <!-- 所有通过Ajax获取div形式打开的页面 -->
        <pattern>/ex/*</pattern>
    </excludes>

    <!-- 左侧为工程树的页面 -->
    <decorator name="ppms-project" page="ppms-project.jsp">
        <pattern>/ztjs/ppms/*</pattern>
    </decorator>
    <!-- 其它为左侧无工程树的页面 -->
    <decorator name="ppms" page="ppms.jsp">
        <pattern>/ztjs/ppms/projectinfo/stat.jsp</pattern>
        <pattern>/*</pattern>
    </decorator>
</decorators>
